name: Bot Cripto (24/7 cada 3hs)

on:
  schedule:
    # Ejecutar en el minuto 0 de cada 3ra hora (00:00, 03:00, 06:00, etc.)
    - cron: '0 */3 * * *'
  workflow_dispatch:

jobs:
  run_crypto:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Python Setup
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'
      
      - name: Instalar Dependencias
        # Usamos las mismas versiones estables
        run: |
          pip install "numpy<2.0.0"
          pip install pandas==1.3.5
          pip install requests

      # --- BOT 3: CRIPTO ---
      - name: Correr Crypto Bot
        env:
          TELEGRAM_TOKEN: ${{ secrets.TELEGRAM_TOKEN }}
          TELEGRAM_CHAT_ID_CRYPTO: ${{ secrets.TELEGRAM_CHAT_ID_CRYPTO }}
        run: python crypto_bot.py
